<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="jumbotron" id="show-page-jumbotron">
    <div class="container show-page-text">
      <h1>This is my blog</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-md-12 col-sm-12" id="show-post" data-post-id="<%=@post.id %>">
    <h2>
      <%= @post.title %>
    </h2>
    <h3>
      <%= @post.created_at.to_date %>
    </h3>
    <%= image_tag(@post.image_url, class: "img-responsive") %>
    <p>
      <%= @post.body %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
